{
  "name": "pr-number-action",
  "version": "1.0.0",
  "description": "Replaces [#PR] with an actual PR number in a description body",
  "main": "index.js",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "lint": "eslint --ext .tsx,.ts,.js,.jsx ./ --ignore-path .gitignore",
    "lint:fix": "eslint --ext .tsx,.ts,.js,.jsx --fix ./ --ignore-path .gitignore",
    "lint:staged": "lint-staged"
  },
  "lint-staged": {
    "*.{tsx,ts,js,jsx}": "eslint --fix --no-ignore"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run lint:staged"
    }
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/matyas-igor/pr-number-action.git"
  },
  "author": "Igor Matias",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/matyas-igor/pr-number-action/issues"
  },
  "homepage": "https://github.com/matyas-igor/pr-number-action#readme",
  "devDependencies": {
    "eslint": "^7.9.0",
    "eslint-config-prettier": "^6.11.0",
    "eslint-plugin-prettier": "^3.1.4",
    "husky": "^4.3.0",
    "lint-staged": "^10.4.0",
    "prettier": "^2.1.2"
  }
}
